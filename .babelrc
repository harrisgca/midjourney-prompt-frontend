{
  "presets": ["react-app"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "alias": {
          "@components": "./src/components",
          "@global": "./src/global",
          "@features": "./src/features",
          "@utils": "./src/utils",
          "@integrations": "./src/integrations",
          "@hooks": "./src/hooks",
          "@constants": "./src/constants",
          "@contexts": "./src/contexts",
          "@types": "./src/types",
          "@store": "./src/store",
          "@styles": "./src/styles",
          "@public": "./public",
          "@queries": "./src/queries",
          "@tests": "./src/global/tests"
        }
      }
    ]
  ]
}
